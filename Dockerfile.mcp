# Dockerfile for MCP Server
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements.txt /app/requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install MCP server dependencies
RUN pip install --no-cache-dir \
    fastmcp \
    uvicorn \
    python-dotenv

# Copy application code
COPY . /app/

# Create data directory for GeoIP databases
RUN mkdir -p /app/data

# Copy GeoIP databases (if they exist)
COPY data/*.mmdb /app/data/ 2>/dev/null || true

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV MCP_TRANSPORT=https
ENV MCP_HOST=0.0.0.0
ENV MCP_PORT=8443

# Expose ports (HTTP and HTTPS)
EXPOSE 8004 8443

# Health check (try HTTPS first, fallback to HTTP)
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f -k https://localhost:8443/health 2>/dev/null || curl -f http://localhost:8004/health || exit 1

# Run the MCP server with HTTPS support
CMD ["python", "start-mcp-https.py", "--transport", "https", "--host", "0.0.0.0", "--port", "8443"]

