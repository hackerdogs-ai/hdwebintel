rfi_resource_dependency_report:
  description: >
    Generate an ad-hoc report on a country/region’s dependency on key resources (oil, gas, rare earths, food crops, water basins).
  expected_output: "JSON summary with dependencies, supply sources, risks, and confidence\
    \ score. Example: {\"country\": \"Germany\",\n \"resources\": {\"lithium\": {\"\
    dependency_pct\": 88, \"top_sources\": [\"Chile\",\"Australia\"]}},\n \"risks\"\
    : [\"China supply leverage\"],\n \"confidence_score\": 0.9}\n"
  agent: natint_analyst
  output_file: output/resource_dependency.json
  async_execution: false
  human_input: false
  markdown: true
  create_directory: true
  guardrail_max_retries: 3
